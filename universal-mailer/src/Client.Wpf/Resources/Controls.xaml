<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DesignTokens.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Foco acessÃ­vel -->
    <Style x:Key="FocusHaloStyle" TargetType="Control">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="Control">
                    <Grid Margin="-2">
                        <Border CornerRadius="{StaticResource radius.default}"
                                BorderBrush="{StaticResource brush.brand.primary}"
                                BorderThickness="2" />
                        <Border CornerRadius="{StaticResource radius.default}"
                                BorderBrush="White"
                                BorderThickness="1"
                                Margin="1" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource brush.bg.canvas}" />
        <Setter Property="Foreground" Value="{StaticResource brush.text.primary}" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource brush.text.primary}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
        <Setter Property="FontWeight" Value="{StaticResource font.weight.regular}" />
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
        <Setter Property="LineHeight" Value="{StaticResource line.height.body}" />
    </Style>

    <Style x:Key="TextBlock.Display" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="{StaticResource font.size.display}" />
        <Setter Property="FontWeight" Value="{StaticResource font.weight.bold}" />
        <Setter Property="LineHeight" Value="{StaticResource line.height.display}" />
    </Style>

    <Style x:Key="TextBlock.H1" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="{StaticResource font.size.h1}" />
        <Setter Property="FontWeight" Value="{StaticResource font.weight.bold}" />
        <Setter Property="LineHeight" Value="{StaticResource line.height.h1}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style x:Key="TextBlock.H2" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="{StaticResource font.size.h2}" />
        <Setter Property="FontWeight" Value="{StaticResource font.weight.medium}" />
        <Setter Property="LineHeight" Value="{StaticResource line.height.h2}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style x:Key="TextBlock.Small" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="{StaticResource font.size.small}" />
        <Setter Property="LineHeight" Value="{StaticResource line.height.small}" />
    </Style>

    <Style x:Key="TextBlock.Mono" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontFamily" Value="{StaticResource font.family.mono}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.mono}" />
        <Setter Property="LineHeight" Value="{StaticResource line.height.small}" />
    </Style>

    <Style x:Key="TextBlock.Label" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontWeight" Value="{StaticResource font.weight.medium}" />
    </Style>

    <Style TargetType="GroupBox">
        <Setter Property="Foreground" Value="{StaticResource brush.text.primary}" />
        <Setter Property="BorderBrush" Value="{StaticResource brush.border.default}" />
        <Setter Property="Background" Value="{StaticResource brush.bg.surface}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
    </Style>

    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource brush.text.primary}" />
        <Setter Property="Background" Value="{StaticResource brush.bg.surface}" />
        <Setter Property="BorderBrush" Value="{StaticResource brush.border.default}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="SelectionBrush" Value="{StaticResource brush.brand.primary}" />
        <Setter Property="CaretBrush" Value="{StaticResource brush.brand.primary}" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border x:Name="Outline"
                                CornerRadius="{StaticResource radius.default}"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Margin="-2" />
                        <Border x:Name="Halo"
                                CornerRadius="{StaticResource radius.default}"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Margin="-1" />
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource radius.default}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Outline" Property="BorderBrush" Value="{StaticResource brush.brand.primary}" />
                            <Setter TargetName="Outline" Property="BorderThickness" Value="2" />
                            <Setter TargetName="Halo" Property="BorderBrush" Value="White" />
                            <Setter TargetName="Halo" Property="BorderThickness" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource brush.bg.canvas}" />
                            <Setter Property="Foreground" Value="{StaticResource brush.text.secondary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource brush.brand.primary}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource brush.bg.canvas}" />
                <Setter Property="Foreground" Value="{StaticResource brush.text.secondary}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource brush.text.primary}" />
        <Setter Property="Background" Value="{StaticResource brush.bg.surface}" />
        <Setter Property="BorderBrush" Value="{StaticResource brush.border.default}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
        <Setter Property="FocusVisualStyle" Value="{StaticResource FocusHaloStyle}" />
        <Style.Triggers>
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource brush.brand.primary}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource brush.text.secondary}" />
                <Setter Property="Background" Value="{StaticResource brush.bg.canvas}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource brush.text.primary}" />
        <Setter Property="Background" Value="{StaticResource brush.bg.surface}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource brush.brand.primary.600}" />
                <Setter Property="Foreground" Value="{StaticResource brush.text.inverse}" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource brush.brand.primary}" />
                <Setter Property="Foreground" Value="{StaticResource brush.text.inverse}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource brush.text.inverse}" />
        <Setter Property="Background" Value="{StaticResource brush.brand.primary}" />
        <Setter Property="BorderBrush" Value="{StaticResource brush.brand.primary.700}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontWeight" Value="{StaticResource font.weight.medium}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="Outline"
                                CornerRadius="{StaticResource radius.default}"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Margin="-2" />
                        <Border x:Name="Halo"
                                CornerRadius="{StaticResource radius.default}"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Margin="-1" />
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource radius.default}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource brush.brand.primary.600}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource brush.brand.primary.700}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource brush.bg.surface}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource brush.border.default}" />
                            <Setter Property="Foreground" Value="{StaticResource brush.text.secondary}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource brush.brand.primary}" />
                            <Setter TargetName="Outline" Property="BorderBrush" Value="{StaticResource brush.brand.primary}" />
                            <Setter TargetName="Outline" Property="BorderThickness" Value="2" />
                            <Setter TargetName="Halo" Property="BorderBrush" Value="White" />
                            <Setter TargetName="Halo" Property="BorderThickness" Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Hyperlink">
        <Setter Property="Foreground" Value="{StaticResource brush.link.default}" />
        <Setter Property="TextDecorations" Value="{x:Null}" />
        <Setter Property="FontFamily" Value="{StaticResource font.family.base}" />
        <Setter Property="FontSize" Value="{StaticResource font.size.body}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="TextDecorations" Value="Underline" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
