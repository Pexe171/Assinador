<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <!-- Paleta base -->
    <Color x:Key="color.brand.primary">#FF0D6EFD</Color>
    <Color x:Key="color.brand.primary.600">#FF0B5ED7</Color>
    <Color x:Key="color.brand.primary.700">#FF0A58CA</Color>

    <Color x:Key="color.state.success">#FF198754</Color>
    <Color x:Key="color.state.warn">#FFFFC107</Color>
    <Color x:Key="color.state.error">#FFDC3545</Color>

    <Color x:Key="color.text.primary">#FF212529</Color>
    <Color x:Key="color.text.secondary">#FF495057</Color>
    <Color x:Key="color.text.inverse">#FFFFFFFF</Color>

    <Color x:Key="color.border.default">#FFDEE2E6</Color>

    <Color x:Key="color.bg.canvas">#FFF8F9FA</Color>
    <Color x:Key="color.bg.surface">#FFFFFFFF</Color>

    <Color x:Key="color.link.default">#FF0D6EFD</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="brush.brand.primary" Color="{StaticResource color.brand.primary}" />
    <SolidColorBrush x:Key="brush.brand.primary.600" Color="{StaticResource color.brand.primary.600}" />
    <SolidColorBrush x:Key="brush.brand.primary.700" Color="{StaticResource color.brand.primary.700}" />

    <SolidColorBrush x:Key="brush.state.success" Color="{StaticResource color.state.success}" />
    <SolidColorBrush x:Key="brush.state.warn" Color="{StaticResource color.state.warn}" />
    <SolidColorBrush x:Key="brush.state.error" Color="{StaticResource color.state.error}" />

    <SolidColorBrush x:Key="brush.text.primary" Color="{StaticResource color.text.primary}" />
    <SolidColorBrush x:Key="brush.text.secondary" Color="{StaticResource color.text.secondary}" />
    <SolidColorBrush x:Key="brush.text.inverse" Color="{StaticResource color.text.inverse}" />

    <SolidColorBrush x:Key="brush.border.default" Color="{StaticResource color.border.default}" />

    <SolidColorBrush x:Key="brush.bg.canvas" Color="{StaticResource color.bg.canvas}" />
    <SolidColorBrush x:Key="brush.bg.surface" Color="{StaticResource color.bg.surface}" />

    <SolidColorBrush x:Key="brush.link.default" Color="{StaticResource color.link.default}" />

    <!-- Tipografia -->
    <FontFamily x:Key="font.family.base">Segoe UI</FontFamily>
    <FontFamily x:Key="font.family.mono">Cascadia Mono</FontFamily>

    <system:Double x:Key="font.size.display">24</system:Double>
    <system:Double x:Key="font.size.h1">20</system:Double>
    <system:Double x:Key="font.size.h2">18</system:Double>
    <system:Double x:Key="font.size.body">14</system:Double>
    <system:Double x:Key="font.size.small">12</system:Double>

    <system:Double x:Key="font.lineHeight.multiplier">1.4</system:Double>

    <!-- EspaÃ§amentos (escala 8-pt) -->
    <system:Double x:Key="space.4">4</system:Double>
    <system:Double x:Key="space.8">8</system:Double>
    <system:Double x:Key="space.12">12</system:Double>
    <system:Double x:Key="space.16">16</system:Double>
    <system:Double x:Key="space.24">24</system:Double>
    <system:Double x:Key="space.32">32</system:Double>

    <Thickness x:Key="thickness.space.4">4</Thickness>
    <Thickness x:Key="thickness.space.8">8</Thickness>
    <Thickness x:Key="thickness.space.12">12</Thickness>
    <Thickness x:Key="thickness.space.16">16</Thickness>
    <Thickness x:Key="thickness.space.24">24</Thickness>
    <Thickness x:Key="thickness.space.32">32</Thickness>

    <Thickness x:Key="thickness.stack.bottom.8">0,0,0,8</Thickness>
    <Thickness x:Key="thickness.stack.bottom.16">0,0,0,16</Thickness>

    <!-- Raios -->
    <CornerRadius x:Key="corner.radius.small">4</CornerRadius>
    <CornerRadius x:Key="corner.radius.default">8</CornerRadius>
    <CornerRadius x:Key="corner.radius.card">12</CornerRadius>

    <!-- Sombras -->
    <DropShadowEffect x:Key="shadow.sutil"
                      Color="#FF000000"
                      Direction="270"
                      ShadowDepth="1"
                      BlurRadius="2"
                      Opacity="0.06" />

    <DropShadowEffect x:Key="shadow.card"
                      Color="#FF000000"
                      Direction="270"
                      ShadowDepth="2"
                      BlurRadius="8"
                      Opacity="0.08" />

    <DropShadowEffect x:Key="shadow.elevado"
                      Color="#FF000000"
                      Direction="270"
                      ShadowDepth="6"
                      BlurRadius="18"
                      Opacity="0.12" />
</ResourceDictionary>
